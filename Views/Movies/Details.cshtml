@model Movie

@{
	ViewData["Title"] = Model.Title;
}

<div class="row mt-60-px ">
	<div class="col-md-3">
		<img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="@Model.Title"/>
	</div>
	<div class="col-md-7">
		<div class="d-flex justify-content-between align-baseline mb-3">
			<h3>@Model.Title</h3>
			<span class="mt-2">
				<i class="bi bi-star-fill text-warning"></i>
				<small class="text-muted">@Model.Rate.ToString("0.0")</small>
			</span>
		</div>
		<span class="me-3 text-muted">
			<i class="bi bi-calendar-week"></i>
			@Model.Year
		</span>
		<span class="text-muted">
			<i class="bi bi-film"></i>
			@Model.Genre.Name
		</span>
		<p class="mt-3" style="text-align: justify;">
			@Model.Storyline
		</p>
		
	</div>
</div>